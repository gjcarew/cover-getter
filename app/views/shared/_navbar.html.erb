<nav>
  <%= link_to "/" do %>
    <div class="logo-container">
      <div class="logo-border">
        <%= image_tag "robot-hand.png", style: "height:50px", class: "logo-icon" %>
      </div>
      <div class="animated-typing-container">
        <h3 class="typing"><i>COVER<bold class="highlight">GETTER</i></bold></h3>
      </div>
    </div>
