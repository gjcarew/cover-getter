<%= form_for @profile, url: profile_path do |f| %>
  <%= render "shared/paragraph_input", {f: f, attribute: :skills, placeholder: ""} %>
  <%= render "shared/paragraph_input", {f: f, attribute: :experience, placeholder: ""} %>
  <%= render "shared/paragraph_input", {f: f, attribute: :education, placeholder: "" } %>
  <%= render "shared/paragraph_input", {f: f, attribute: :projects, placeholder: "" } %>
  <%= f.submit "Submit" %>
<% end %>
